<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
    <modelVersion>4.0.0</modelVersion>

    <parent>
        <groupId>com.jf</groupId>
        <artifactId>jframe</artifactId>
        <version>4.0</version>
        <relativePath>../jframe/pom.xml</relativePath>
    </parent>

    <artifactId>jframe-web-test</artifactId>
    <version>0.0.1</version>
    <packaging>jar</packaging>
    <name>jframe-web-test</name>
    <description>Test project for Spring Boot</description>

    <!-- 以下组件是否打包[compile] -->
    <properties>
        <scope.quartz>compile</scope.quartz>
        <scope.activemq>provided</scope.activemq>
        <scope.amqp>compile</scope.amqp>
        <scope.websocket>provided</scope.websocket>
        <scope.redisson>compile</scope.redisson>
        <scope.flume>provided</scope.flume>
        <scope.elk>provided</scope.elk>
        <scope.springcloud.eureka>compile</scope.springcloud.eureka>
        <scope.springcloud.feign>compile</scope.springcloud.feign>
        <scope.springcloud.hystrix>compile</scope.springcloud.hystrix>
        <scope.springcloud.config>compile</scope.springcloud.config>
        <scope.thrid.jpush>provided</scope.thrid.jpush>
        <scope.thrid.wepay>provided</scope.thrid.wepay>
        <scope.thrid.alipay>provided</scope.thrid.alipay>
        <scope.thrid.wechat>provided</scope.thrid.wechat>
    </properties>

    <dependencies>
        <dependency>
            <groupId>org.springframework.boot</groupId>
            <artifactId>spring-boot-starter-test</artifactId>
            <scope>test</scope>
        </dependency>

        <dependency>
            <groupId>com.jf</groupId>
            <artifactId>jframe-core</artifactId>
            <version>1.0</version>
        </dependency>
    </dependencies>

    <build>
        <finalName>jframe-web-test</finalName>
        <sourceDirectory>src/main/java</sourceDirectory>
        <resources>
            <resource>
                <directory>src/main/resources</directory>
            </resource>
            <!-- include jframe public resources -->
            <resource>
                <directory>../jframe/public/static</directory>
                <targetPath>static</targetPath>
            </resource>
            <resource>
                <directory>../jframe/public/templates</directory>
                <targetPath>templates</targetPath>
            </resource>
        </resources>
        <plugins>
            <!-- package plugin -->
            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-jar-plugin</artifactId>
                <configuration>
                    <archive>
                        <manifest>
                            <mainClass>com.jf.JframeWebTestApplication</mainClass>
                            <addClasspath>true</addClasspath>
                            <classpathPrefix>lib/</classpathPrefix>
                        </manifest>
                        <manifestEntries>
                            <Class-Path>./</Class-Path>
                        </manifestEntries>
                    </archive>
                    <excludes>
                        <exclude>static/**</exclude>
                    </excludes>
                </configuration>
            </plugin>
            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-assembly-plugin</artifactId>
                <configuration>
                    <appendAssemblyId>false</appendAssemblyId>
                    <descriptors>
                        <descriptor>../jframe/build/package.xml</descriptor>
                    </descriptors>
                </configuration>
                <executions>
                    <execution>
                        <id>make-assembly</id>
                        <phase>package</phase>
                        <goals>
                            <goal>single</goal>
                        </goals>
                    </execution>
                </executions>
            </plugin>
        </plugins>
    </build>

</project>
