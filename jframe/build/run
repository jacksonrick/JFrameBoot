#!/bin/bash
# description: start app
# author: jackson rick

JARNAME=$1
JAVAPATH=/usr/local/jdk/bin
APPATH=/data/wwwroot

if  [ ! -n "$JARNAME" ] ;then
    echo "Usage: $0 appname"
    exit 1;
fi

APP_NAME="jframe-web-$JARNAME"
PID=$(ps -aux | grep ${APP_NAME} | grep -v grep | awk '{print $2}' )

if [ -n "$PID" ];then
    kill -9 $PID
fi

exec $JAVAPATH/java -Dapp.name=$APP_NAME -server -jar $APPATH/$JARNAME/$APP_NAME.jar --spring.profiles.active=pro 5 > /data/wwwlogs/$APP_NAME.run.log &
echo -e "$APP_NAME is started."

# exec java -server -jar -Dapp.name=jframe-web-manage jframe-web-manage.jar --spring.profiles.active=pro 5 > run.log &

# -server user server mode.
# -Dapp.name specify app name and use to logback's filename.
# --spring.profiles.active specify dev or product profile.
# we can specify java properties: java -Xms4g -Xmx4g -Xmn768m